          <indexterm zone="ch-system-coreutils dircolors">
            <primary sortas="b-dircolors">dircolors</primary>
          </indexterm>
        </listitem>
      </varlistentry>

      <varlistentry id="dirname">
        <term><command>dirname</command></term>
        <listitem>
